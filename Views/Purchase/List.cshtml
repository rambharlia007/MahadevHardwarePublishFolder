                                    });
                                });

                                return {
                                    results: items
                                };
                            },
                            cache: true
                        },
                        placeholder: 'Search for a item',
                        minimumInputLength: 1
                    });

                    $('.product-select-2').on('select2:select',
                        function (e) {
                            var index = parseInt($(this).attr('data-id'));
                            var data = e.params.data;
                            var currentItem = self.newPurchases[0].items[index];
                            currentItem.ItemId = data.id;
                            currentItem.Name = data.text;
                            currentItem.CGST = data.CGST;
                            currentItem.SGST = data.SGST;
