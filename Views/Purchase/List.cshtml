    <script>
    $(document).ready(function() {

        function getPurchaseGSTModel() {
            var gstModel = []
            for (var i = 0; i < 1; i++) {
                gstModel.push({
                    SGST: "",
                    CGST: "",
                    SGSTAmount: "",
                    CGSTAmount: "",
                })
            }
            return gstModel;
        }

        function addEmptyNewItems() {
            var result = [];
            for (var i = 0; i < 1; i++) {
                result.push({
                    ItemId: "",
                    Name: "",
