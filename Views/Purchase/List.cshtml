}

<style>
    .pointer {
        cursor: pointer;
    }

    .modal {
        overflow-y: auto !important;
    }

    .select2-selection{
        min-width:200px !important
    }
    .grid-edit {
        text-decoration: underline;
        color: #158cba;
    }

    .hide {
        display: none;
    }

    .collapse {
        display: none;
    }

    [v-cloak] {
        display: none;
