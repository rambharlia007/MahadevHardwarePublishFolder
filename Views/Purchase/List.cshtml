                            validData.push({ Purchase: data, GSTModelData: data.GSTModelData });
                        });
                        $.ajax({
                            type: 'POST',
                            url: '@Url.Action("Add", "purchase")',
                            data: JSON.stringify(validData),
                            dataType: 'json',
                            contentType: 'application/json; charset=utf-8',
