                            currentPurchase.BusinessName = purchase.BusinessName;
                            currentPurchase.TotalAmount = purchase.TotalAmount;
                            currentPurchase.TotalCGSTAmount = purchase.TotalCGSTAmount;
                            currentPurchase.TotalSGSTAmount = purchase.TotalSGSTAmount;
                            currentPurchase.Date = purchase.Date;
                            currentPurchase.Invoice = purchase.Invoice;
                            currentPurchase.SubAmount = purchase.SubAmount;
                            currentPurchase.DistributorGSTIN = purchase.DistributorGSTIN;
                            currentPurchase.DistributorName = purchase.DistributorName;
