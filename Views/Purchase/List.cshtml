        new Vue({
            el: '#app',
            data: obj,
            methods: {
                isExistingItem: function (index) {
                    console.log(this.newPurchases[0].items[index].IsExistingProduct);
                },
                addEmptyProduct: function () {
                    var self = this;
                    var productList = this.newPurchases[0].items;
                    productList.push(addEmptyNewItems()[0]);
                    var height = 50 * productList.length;
                    var currentTr = productList.length;
                    setTimeout(function () {
                        $("#add-product-table").scrollTop(height)
                        validation[0].register();
                        $("#add-product-table tr:eq(" + currentTr + ") input:first").focus();
                        self.initSelect2();
                    }, 300)
                },
                calculatePerItemTotalPrice: function (index) {
                    // total item price for the individual product.
                    var self = this;
                    var currentItem = self.newPurchases[0].items[index];
                    var tax = parseInt(currentItem.CGST) + parseInt(currentItem.SGST);
                    var totalPrice = parseFloat(currentItem.Price) * currentItem.Quantity;
                    var totalPriceWithDiscount = totalPrice - self.getPercentageValue(totalPrice, currentItem.Discount);
                    var totalTax = self.getPercentageValue(totalPriceWithDiscount, tax);
                    var finalTotalPrice = totalPriceWithDiscount + totalTax;
                    currentItem.TotalAmount = this.roundOffTwoPlace(finalTotalPrice);
                    currentItem.TotalTax = totalTax;
                    self.calculateFinalTotalAndTax();
                },
                calculateFinalTotalAndTax: function () {
                    // total price for the purchase bill. on adding the individual product.
                    var tax = 0;
                    var totalAmount = 0;
                    this.newPurchases[0].items.forEach(function (val, index) {
                        tax += val.TotalTax;
                        totalAmount += val.TotalAmount;
                    });
                    var divTax = this.roundOffTwoPlace(tax / 2);
                    this.newPurchases[0].TotalCGSTAmount = this.newPurchases[0].TotalSGSTAmount = divTax;
                    this.newPurchases[0].SubAmount = this.roundOffTwoPlace(totalAmount - tax);
                    var rounfOffValue = this.roundOffTwoPlace(totalAmount % 1);
                    this.newPurchases[0].Roundoff = rounfOffValue;
                    this.newPurchases[0].TotalAmount = rounfOffValue < 0.5 ? Math.floor(totalAmount) : Math.ceil(totalAmount);
                },
                getPercentageValue: function (value, discount) {
                    var res = discount / 100 * value;
                    return this.roundOffTwoPlace(res);
                },
                calculatePerItemDiscount: function (index) {
                    var currentItem = this.newPurchases[0].items[index];
                    this.calculateDiscount(currentItem);
                },
                calculateDiscount: function (currentItem) {
                    var self = this;
                    var tax = parseInt(currentItem.CGST) + parseInt(currentItem.SGST);
                    var cp = parseFloat(currentItem.Price);
                    var price = cp + ((tax / 100) * cp);
                    if (currentItem.Discount) {
                        tempPrice =
                            price - ((currentItem.Discount / 100) * price);
                        currentItem.DiscountPrice = self.roundOffTwoPlace(tempPrice);
                    } else {
                        currentItem.DiscountPrice = self.roundOffTwoPlace(price);
                    }
                },
                roundOffTwoPlace: function (number) {
                    return 0 || Math.round(number * 100) / 100
                },
                copyTax: function (index) {
                    this.newPurchases[0].items[index].SGST = this.newPurchases[0].items[index].CGST;
                },
                openModalForNewDistributor: function (index) {
