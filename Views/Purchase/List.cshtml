
@{
    ViewBag.Title = "List";
}

<style>
    .pointer {
        cursor: pointer;
    }

    .grid-edit {
        text-decoration: underline;
        color: #158cba;
    }

    .hide {
        display: none;
    }

    .collapse {
        display: none;
    }

    [v-cloak] {
        display: none;
    }

    .modal-form-header {
        padding-top: 10px !important;
        padding-bottom: 10px !important;
        background-color: rgb(238, 238, 238) !important;
        margin-bottom: 10px !important;
    }

    .text-center {
        text-align: center
    }

    .table-head, .table-body .table-row {
        display: table;
        width: 100%;
        table-layout: fixed;
    }

    .jq-dte-day {
        width: 30px !important;
    }

    .jq-dte-month {
        width: 30px !important;
    }

    .jq-dte-year {
        width: 45px !important;
    }

    span.jq-dte {
        width: 125px;
        border: 1px solid #ced4da;
        padding: 0px;
        margin: 0px;
        text-align: left !important;
    }

        span.jq-dte input {
            text-align: left !important;
        }

    .go-btn {
        color: black;
        background-color: #fff;
        margin-left: 50px;
        border: 1px solid #ced4da;
    }

    @@media only screen and (min-width: 768px) {
        .table-body {
            display: block;
            height: 400px;
            overflow-y: scroll;
        }
    }

    @@media only screen and (min-width: 992px) {
        .table-body {
            display: block;
            height: 400px;
            overflow-y: scroll;
        }
    }

    @@media only screen and (min-width: 1500px) {
        .table-body {
            display: block;
            max-height: 500px;
            overflow-y: scroll;
        }
    }
</style>

<div id="app">
