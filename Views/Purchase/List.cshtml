                                                <option value="Unit">Unit</option>
                                                <option value="Bag">Bag</option>
                                                <option value="Box">Box</option>
                                                <option value="KGS">KGS</option>
                                            </select>
                                        </td>
                                        <td> <input type="number" cv="required" v-model="item.Quantity" v-on:keyup="calculatePerItemTotalPrice(innerIndex)" class="form-control form-control-sm"></td>
                                        <td> <input type="number" v-model="item.SGST" cv="required" v-on:keyup="calculatePerItemTotalPrice(innerIndex)" class="form-control form-control-sm"></td>
                                        <td> <input type="number" v-model="item.CGST" cv="required" v-on:keyup="calculatePerItemTotalPrice(innerIndex)" class="form-control form-control-sm"></td>
                                        <td> <input type="number" step=".01" v-model="item.Discount" v-on:keyup="calculatePerItemTotalPrice(innerIndex)" class="form-control form-control-sm"></td>
