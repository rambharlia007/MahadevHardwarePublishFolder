                    $(e).on('select2:select',
                        function (e) {
                            var index = parseInt($(this).attr('data-id'));
                            var data = e.params.data;
                            self.newPurchases[index].DistributorGSTIN = data.GSTIN;
                            self.newPurchases[index].DistributorName = data.text;
                        });
                },
                initSelect2: function () {
                    var self = this;
                    $(".product-select-2").select2({
                        ajax: {
                            url: "/item/GetDataBySearch",
                            dataType: 'json',
                            delay: 250,
                            data: function (params) {
