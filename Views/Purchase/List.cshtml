                                    q: params.term,
                                    page: params.page
                                };
                            },
                            processResults: function (data, params) {

                                var items = [];
                                data.forEach((item) => {
                                    items.push({
                                        id: item.Id,
                                        text: item.Name,
                                        CGST: item.CGST,
                                        SGST: item.SGST,
                                        Price: item.Price,
                                        Discount: item.Discount,
