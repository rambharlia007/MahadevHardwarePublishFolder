                                            <input type="number" v-model="item.Price" cv="required" class="form-control form-control-sm" v-on:keyup="calculatePerItemTotalPrice(innerIndex)">
                                            <i class="fa fa-trash show-on-hover" v-on:click="removeNewProduct(innerIndex)" style="position:absolute; right:15px; top:15px; cursor:pointer"></i>
                                        </td>
                                        <td> <input type="number" readonly v-model="item.TotalAmount" class="form-control form-control-sm"></td>
                                    </tr>
                                </tbody>
