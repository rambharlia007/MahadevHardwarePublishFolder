                    var self = this;
                    $("#" + id).modal({ backdrop: 'static', keyboard: false, show: true });
                    self.initSelect2();
                    self.initDistributorSelect2(".dist-select-22");
                },
                displayFormat: function (data) {
                    return Number(data).toLocaleString(undefined, { minimumFractionDigits: 2 })
                },
                initDistributorSelect2: function (e) {
                    var self = this;
                    $(e).select2({
                        ajax: {
                            url: "/contact/search",
                            dataType: 'json',
                            delay: 250,
