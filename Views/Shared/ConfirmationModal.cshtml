<div class="modal" id="confirmation-modal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirmation</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-success btn-sm confirm-success">Ok</button>
                <button type="button" class="btn btn-secondary btn-sm confirm-failure" data-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>
